<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/negro"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvTituloEstadistica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:text="ESTADISTICAS"
        android:textSize="30dp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/tvTotalMensual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Mensual"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:textSize="24dp"
        android:layout_below="@+id/tvTituloEstadistica" />

    <TextView
        android:id="@+id/tvTotalMensualEstadistica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$ 2049,12"
        android:textSize="24dp"
        android:layout_alignTop="@id/tvTotalMensual"
        android:layout_toRightOf="@id/tvTotalMensual"
        android:layout_marginLeft="20dp"/>


</RelativeLayout>